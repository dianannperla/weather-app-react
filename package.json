{
  "name": "weather-app-react",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

/*
 * package.json
 * 
 * Structure of the package.json file:
 * - name: The name of the application
 * - version: The current version of the application
 * - private: Indicates if the package is private
 * - dependencies: Lists the packages required by the application
 * - scripts: Defines scripts to run commands like start, build, and test
 * - eslintConfig: Configuration for ESLint
 * - browserslist: Specifies which browsers to support in production and development
 */